# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                       controllers.HomeController.index
GET         /exercises              controllers.ExerciseController.renderOverview
GET         /exercises              controllers.ExerciseController.list(p:Int ?= 0, s ?= "title", f ?= "")
GET         /exercises/:id/edit     controllers.ExerciseController.edit(id: Long)
POST        /exercises/:id/update   controllers.ExerciseController.update(id: Long)
POST        /addexercise            controllers.HomeController.addExercise
POST        /login                  controllers.HomeController.login
POST        /logout                 controllers.HomeController.logout
GET         /dashboard              controllers.DashboardController.renderDashboard
GET         /tags                   controllers.TagController.renderTagList

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
